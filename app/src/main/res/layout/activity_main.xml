<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context="com.drizzle.voteup.MainActivity"
	>

	<com.drizzle.voteupanim.VoteUpView
		android:id="@+id/circleRipple"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="20dp"
		android:paddingTop="30dp"
		app:default_text="default"
		app:text_size="14sp"
		app:ripple_radius="50dp"
		app:default_text_color="#ffffff"
		app:done_text="done"
		app:done_text_color="#000000"
		android:elevation="10dp"
		android:translationY="4dp"
		android:translationZ="4dp"
		android:translationX="4dp"
		/>
</LinearLayout>
